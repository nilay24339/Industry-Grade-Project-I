pipeline {
    agent any

    stages {
        stage('Code Checkout') {
            steps {
                git 'https://github.com/nilay24339/Industry-Grade-Project-I.git'
            }
        }

        stage('Code Compile') {
            steps {
                sh 'mvn compile'
            }
        }

        stage('Test') {
            steps {
                sh 'mvn test'
            }
        }

        stage('Build') {
            steps {
                sh 'mvn package'
            }
        }
        
        stage('Check Workspace') {
            steps {
                // List files in the workspace to verify Dockerfile presence
                sh 'ls -l'
            }
        }

        stage('Build Docker Image') {
            steps {
                // Adjust the Dockerfile path below if it is not in root (e.g., docker/Dockerfile)
                sh 'docker build -t nilay2497/abc_tech:$BUILD_NUMBER .'
            }
        }

        stage('Push Docker Image') {
            steps {
                withDockerRegistry(credentialsId: "dockerhub-token-jenkins", url: "") {
                    sh 'docker push nilay2497/abc_tech:$BUILD_NUMBER'
                }
            }
        }

        stage('Deploy as container') {
            steps {
                sh 'docker run -itd -P nilay2497/abc_tech:$BUILD_NUMBER'
            }
        }
    }
}
